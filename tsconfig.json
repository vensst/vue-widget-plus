{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,

    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],

    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    "baseUrl": ".",
    "types": ["vite/client"]
  },

  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/env.d.ts"
  ],

  "exclude": [
    "examples",
    "node_modules",
    "dist"
  ],
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
